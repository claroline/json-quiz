{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/question/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["application/x.pair+json"]
        },
        "random": {
          "type": "boolean"
        },
        "penalty": {
          "type": "number"
        },
        "left": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json"
          }
        },
        "right": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json"
          }
        },
        "solutions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "leftId": {
                "type": "string"
              },
              "rightId": {
                "type": "string"
              },
              "score": {
                "type": "number"
              },
              "feedback": {
                "type": "string"
              }
            },
            "required": ["leftId", "rightId", "score"]
          }
        }
      },
      "required": ["random", "penalty", "left", "right"]
    }
  ]
}
