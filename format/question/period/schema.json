{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions" : {
    "marker":{
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "time": {
          "type": "number",
          "description": "The perfect moment"
        },
        "before": {
          "type": "number",
          "description": "Tolerance before the marker",
          "default": 0
        },
        "after": {
          "type": "number",
          "description": "Tolerance after the marker",
          "default": 0
        }
      },
      "required": ["id", "time"]
    }
  },
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/question/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "application/x.period+json"
          ]
        },
        "file": {
          "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json"
        },
        "maximum":{
          "type": "number",
          "default": 0,
          "description": "The maximum amount of region the user will be able to draw. O means infinite."
        },
        "solutions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items":{
            "type": "object",
            "properties": {
              "region": {
                "type": "object",
                "properties": {
                  "id": {
                    "type" : "string"
                  },
                  "start": {
                    "type": "#/definitions/marker"
                  },
                  "end":{
                    "type": "#/definitions/marker"
                  }
                },
                "required": ["id", "sart", "end"]
              },
              "valid":{
                "type": "boolean",
                "default": true
              },
              "score": {
                "type": "number"
              },
              "feedback": {
                "type": "string"
              }
            },
            "required": ["region", "valid", "score"]
          }
        }
      },
      "required": ["file"]
    }
  ]
}
