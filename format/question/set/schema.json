{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/question/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["application/x.set+json"]
        },
        "random": {
          "type": "boolean",
          "description": "Randomize members and sets",
          "default": "false"
        },
        "penalty": {
          "type": "number",
          "description": "Penalty to apply for each incorrect association",
          "default": 0
        },
        "sets": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            },
            "required": ["id", "name"]
          }
        },
        "members": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json"
          }
        },
        "solutions": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "setId": {
                "type": "string"
              },
              "memberId": {
                "type": "string"
              },
              "score": {
                "type": "number"
              },
              "feedback": {
                "type": "string"
              }
            },
            "required": ["setId", "memberId", "score"]
          }
        }
      },
      "required": ["random", "penalty", "sets", "members"]
    }
  ]
}
