{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions" : {
    "coord": {
      "type": "object",
      "properties": {
        "x": {"type" : "number"},
        "y": {"type" : "number"}
      },
      "required": ["x", "y"]
    }
  },
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/question/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "application/x.caption+json"
          ]
        },
        "penalty": {
          "type": "number",
          "minimum": 0
        },
        "image": {
          "allOf": [
            {
              "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json"
            },
            {
              "type": "object",
              "properties": {
                "width": {
                  "type": "number"
                },
                "height": {
                  "type": "number"
                }
              },
              "required": ["width", "height"]
            }
          ]
        },
        "dimensions": {
          "type": "object",
          "description": "Areas / labels dimmensions (px).",
          "properties": {
            "widh": {
              "type": "number",
              "default": 120
            },
            "height": {
              "type": "number",
              "default": 60
            }
          },
          "required": ["widh", "height"]
        },
        "labels": {
          "type": "array",
          "description": "Items available for drag and drop.",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "areas": {
          "type":"array",
          "description": "Areas to draw.",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type":"string"
              },
              "coords": {
                "type": "array",
                "description": "Top left and bottom right coordinates for the area to draw.",
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true,
                "items": {
                  "$ref": "#/definitions/coord"
                }
              },
              "target": {
                "$ref": "#/definitions/coord",
                "description": "This gives the position of the associated arrow if any."
              },
              "choices": {
                "type": "array",
                "minItems": 2,
                "uniqueItems": true,
                "items": {
                  "type": "string"
                }
              },
              "input": {
                "type": "boolean",
                "description": "Flag to tell if the area as to be rendered with a text input.",
                "default": false
              }
            },
            "required": ["id", "coords"]
          }
        },
        "solutions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Area id."
              },
              "answers": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "$ref": "http://json-quiz.github.io/json-quiz/schemas/misc/keyword/schema.json"
                }
              }
            },
            "required": ["id", "answers"]
          }
        }
      },
      "required": ["penalty", "image", "dimensions", "areas"]
    }
  ]
}
