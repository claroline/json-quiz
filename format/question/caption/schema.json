{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions" : {
    "coord": {
      "type": "object",
      "properties": {
        "x": {"type" : "number"},
        "y": {"type" : "number"}
      },
      "required": ["x", "y"]
    }
  },
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/question/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "application/x.caption+json"
          ]
        },
        "penalty": {
          "type": "number",
          "minimum": 0
        },
        "image": {
          "allOf": [
            {
              "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json"
            },
            {
              "type": "object",
              "properties": {
                "width": {
                  "type": "number"
                },
                "height": {
                  "type": "number"
                }
              },
              "required": ["width", "height"]
            }
          ]
        },
        "labels": {
          "type": "array",
          "description": "",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "areas": {
          "type":"array",
          "description": "Areas to draw.",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type":"string"
              },
              "coords": {
                "type": "array",
                "description": "Top left and bottom right coordinates for the area to draw.",
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true,
                "items": {
                  "$ref": "#/definitions/coord"
                }
              },
              "content": {
                "type":"object",
                "description": "Content of the area. If none a text input is rendered.",
                "oneOf": [
                  {
                    "properties": {
                      "text": {
                        "type": "string"
                      }
                    },
                    "required": ["text"]
                  },
                  {
                    "properties": {
                      "choices": {
                        "type": "array",
                        "minItems": 2,
                        "uniqueItems": true,
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["choices"]
                  }
                ]
              }
            },
            "required": ["id", "coords"]
          }
        },
        "solutions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Area id."
              },
              "answers": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "$ref": "http://json-quiz.github.io/json-quiz/schemas/misc/keyword/schema.json"
                }
              }
            },
            "required": ["id", "answers"]
          }
        }
      },
      "required": ["penalty", "image", "areas"]
    }
  ]
}
