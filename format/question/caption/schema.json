{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions" : {
    "coord": {
      "type": "object",
      "properties": {
        "x": {"type" : "number"},
        "y": {"type" : "number"}
      },
      "required": ["x", "y"]
    }
  },
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/question/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "application/x.caption+json"
          ]
        },
        "image": {
          "allOf": [
            {
              "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json"
            },
            {
              "type": "object",
              "properties": {
                "width": {
                  "type": "number"
                },
                "height": {
                  "type": "number"
                }
              },
              "required": ["width", "height"]
            }
          ]
        },
        "showAreas": {
          "type": "boolean",
          "default": false
        },
        "penalty": {
          "type": "number",
          "minimum": 0
        },
        "labels": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "coords": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true,
                "items": {
                  "$ref": "#/definitions/coord"
                },
                "description": "Top left and bottom right coordinates for the area to draw."
              },
              "data": {
                "type": "string",
                "description": "Plain text data for the label. If none the label will be displayed with a text input or a dropdown list."
              },
              "choices": {
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "type": "string"
                },
                "description": "Choices available for the label."
              }
            },
            "required": ["id"]
          }
        },
        "solutions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Label id."
              },
              "coord": {
                "$ref": "#/definitions/coord",
                "description": "Top left coordinates for the answer."
              },
              "answers": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "$ref": "http://json-quiz.github.io/json-quiz/schemas/misc/keyword/schema.json"
                }
              }
            },
            "required": ["id", "coord", "answers"]
          }
        }
      },
      "required": ["image", "penalty", "showAreas", "labels"]
    }
  ]
}
