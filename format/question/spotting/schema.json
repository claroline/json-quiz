{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions" : {
    "marker":{
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "time": {
          "type": "number"
        },
        "before": {
            "type": "number"
        },
        "after": {
            "type": "number"
        }
      },
      "required": ["id", "time"]
    },
    "region":{
      "type": "object",
      "properties": {
        "id": {
          "type" : "string"
        },
        "start": {
          "$ref": "#/definitions/marker"
        },
        "valid":{
          "type": "boolean"
        }
      },
      "required": ["id", "start", "valid"]
    }
  },
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/question/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "application/x.spotting+json"
          ]
        },
        "file": {
          "$ref": "http://json-quiz.github.io/json-quiz/schemas/content/schema.json"
        },
        "solutions": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items":{
            "type": "object",
            "properties": {
              "region": {
                "$ref": "#/definitions/region"
              },
              "score": {
                "type": "number"
              },
              "feedback": {
                "type": "string"
              }
            },
            "required": ["region", "score"]
          }
        }
      },
      "required": ["file"]
    }
  ]
}
