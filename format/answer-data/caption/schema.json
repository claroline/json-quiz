{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "type": {
      "enum": ["application/x.caption+json"]
    },
    "data": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "References the question label id."
          },
          "x": {
            "description": "Top left position on the horizontal axis.",
            "type": "number",
            "minimum": 0
          },
          "y": {
            "description": "Top left position on the vertical axis.",
            "type": "number",
            "minimum": 0
          },
          "text": {
            "type": "string"
          }
        }
      }
    }
  }
}
