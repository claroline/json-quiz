{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/score/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["fixed"]
        },
        "success": {
          "type": "number"
        },
        "failure": {
          "type": "number"
        }
      },
      "required": ["success", "failure"]
    }
  ]
}
